{
  "name": "@tekclaw/vix-monorepo",
  "version": "0.0.1",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "lerna": "^6.4.1",
    "npm-run-all": "4.1.5"
  },
  "scripts": {
    "build": "rm -rf packages/*/{lib,esm,dist} && lerna run build && npm run setup",
    "watch": "tsc -b -w",
    "setup": "node packages/vix-core/dist/install",
    "clean:dist": "rm -rf packages/**/dist",
    "clean": "rm -rf node_modules && npx lerna clean -y",
    "bootstrap": "npm run clean && npx lerna bootstrap",
    "lint": "npm run lint -ws",
    "postinstall": "npm run build"
  },
  "workspaces": [
    "packages/*"
  ]
}
